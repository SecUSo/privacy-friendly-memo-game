<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/player_one_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Player 1"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:id="@+id/player_one_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/player_one_found_value"
        android:layout_toStartOf="@+id/player_one_found_value"
        android:layout_toLeftOf="@+id/player_one_found_value"
        android:text="@string/stats_found_cards"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/player_one_found_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_one_name"
        android:layout_toStartOf="@+id/player_one_name"
        android:layout_toLeftOf="@+id/player_one_name"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/player_one_tries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player_one_found_value"
        android:layout_toEndOf="@+id/player_one_name"
        android:layout_toRightOf="@+id/player_one_name"
        android:text="@string/stats_tries"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/player_one_tries_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player_one_tries"
        android:layout_toEndOf="@+id/player_one_tries"
        android:layout_toRightOf="@+id/player_one_tries"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!--  New player one optimal score view -->
    <TextView
        android:id="@+id/player_one_optimal_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_one_found"
        android:layout_toRightOf="@+id/player_one_name"
        android:text="Optimal-score: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!--  New player one optimal score value view -->
    <TextView
        android:id="@+id/player_one_non_optimal_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_one_tries_value"
        android:layout_toRightOf="@+id/player_one_optimal_score"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <!--  New player one non-optimal score view -->
    <TextView
        android:id="@+id/player_one_non_optimal_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_one_optimal_score"
        android:layout_toRightOf="@+id/player_one_name"
        android:text="Non-optimal-score: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!--  New player one non-optimal score value view -->
    <TextView
        android:id="@+id/player_one_optimal_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_one_optimal_score"
        android:layout_toRightOf="@+id/player_one_non_optimal_score"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/player_two_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_one_non_optimal_score"
        android:layout_centerHorizontal="true"
        android:text="Player 2"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:00"
        android:id="@+id/player_two_found_value"
        android:layout_below="@+id/player_two_name"
        android:layout_toLeftOf="@+id/player_two_name"
        android:layout_toStartOf="@+id/player_two_name" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/stats_found_cards"
        android:id="@+id/player_two_found"
        android:layout_alignTop="@+id/player_two_found_value"
        android:layout_toLeftOf="@+id/player_two_found_value"
        android:layout_toStartOf="@+id/player_two_found_value" />

    <TextView
        android:id="@+id/player_two_tries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/player_one_tries"
        android:layout_alignLeft="@+id/player_one_tries"
        android:layout_alignBottom="@+id/player_two_found_value"
        android:text="@string/stats_tries"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/player_two_tries_value"
        android:layout_alignBottom="@+id/player_two_tries"
        android:layout_alignLeft="@+id/player_one_tries_value"
        android:layout_alignStart="@+id/player_one_tries_value" />



    <!--  New player two optimal score view -->
    <TextView
        android:id="@+id/player_two_optimal_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_two_tries"
        android:layout_toRightOf="@+id/player_two_name"
        android:text="Optimal-score: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!--  New player two optimal score value view -->
    <TextView
        android:id="@+id/player_two_optimal_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_two_tries"
        android:layout_toRightOf="@+id/player_two_optimal_score"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <!--  New player two non-optimal score view -->
    <TextView
        android:id="@+id/player_two_non_optimal_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_two_optimal_score"
        android:layout_toRightOf="@+id/player_one_name"
        android:text="Non-optimal-score: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!--  New player two non-optimal score value view -->
    <TextView
        android:id="@+id/player_two_non_optimal_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_two_optimal_score"
        android:layout_toRightOf="@+id/player_two_non_optimal_score"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>